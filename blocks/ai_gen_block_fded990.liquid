{% doc %}
  @prompt
    Create a promotion cards section with customizable card layouts that includes all standard options (title, description, images, buttons, colors, spacing). Add a mobile/tablet layout option that allows cards to scroll horizontally instead of stacking vertically. Include settings for: number of cards, card content (heading, text, image, button), alignment options, color schemes, and a toggle to switch between stacked layout and horizontal scrolling on mobile and tablet screen sizes.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-promo-cards-{{ ai_gen_id }} {
    width: 100%;
    display: block;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-promo-cards__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-promo-cards__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.cards_per_row }}, 1fr);
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-promo-cards__scroll-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: {{ block.settings.scrollbar_color }} transparent;
  }

  .ai-promo-cards__scroll-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 8px;
  }

  .ai-promo-cards__scroll-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: transparent;
  }

  .ai-promo-cards__scroll-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background-color: {{ block.settings.scrollbar_color }};
    border-radius: 4px;
  }

  .ai-promo-cards__card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-promo-cards__scroll-{{ ai_gen_id }} .ai-promo-cards__card-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.mobile_card_width }}%;
    scroll-snap-align: start;
  }

  .ai-promo-cards__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-promo-cards__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
  }

  .ai-promo-cards__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-promo-cards__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-promo-cards__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-promo-cards__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-promo-cards__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-promo-cards__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_spacing }}px;
    flex-grow: 1;
  }

  .ai-promo-cards__button-wrapper-{{ ai_gen_id }} {
    margin-top: auto;
    {% if block.settings.text_alignment == 'center' %}
      display: flex;
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      display: flex;
      justify-content: flex-end;
    {% endif %}
  }

  .ai-promo-cards__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-promo-cards__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  @media screen and (max-width: 1024px) {
    .ai-promo-cards__grid-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'scroll' %}
        display: none;
      {% else %}
        grid-template-columns: repeat({{ block.settings.cards_per_row_tablet }}, 1fr);
      {% endif %}
    }

    .ai-promo-cards__scroll-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'scroll' %}
        display: flex;
      {% else %}
        display: none;
      {% endif %}
    }
  }

  @media screen and (max-width: 749px) {
    .ai-promo-cards__grid-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'scroll' %}
        display: none;
      {% else %}
        grid-template-columns: repeat({{ block.settings.cards_per_row_mobile }}, 1fr);
      {% endif %}
    }

    .ai-promo-cards__scroll-{{ ai_gen_id }} {
      {% if block.settings.mobile_layout == 'scroll' %}
        display: flex;
      {% else %}
        display: none;
      {% endif %}
    }

    .ai-promo-cards__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-promo-cards__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<promo-cards-{{ ai_gen_id }} class="ai-promo-cards-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
