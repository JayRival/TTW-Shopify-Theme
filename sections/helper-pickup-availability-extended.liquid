<div id="PickupAvailabilityWidget" data-sku="{{ product_variant.sku }}" data-title="{{ product.title | escape }}">
  <div class="pickup-availability-widget__header">
    <span class="alert alert--note alert--circle alert--circle-loading alert--unstyled">
      {{ 'store_availability.compact_widget.checking_availability' | t }}
    </span>
  </div>

  <div class="pickup-availability-widget__locations" id="rex-availability-locations"></div>

  <button class="pickup-availability-widget__more" id="rex-availability-more" style="display:none;" aria-expanded="false" aria-controls="site-availability-sidebar">
    <span>Click to view all stores</span>
  </button>
</div>

<div id="PickupAvailabilitySidebar" style="display:none;">
  <sidebar-drawer id="site-availability-sidebar" class="sidebar sidebar--right" tabindex="-1" role="dialog" aria-modal="true">
    <div class="sidebar__header">
      <span class="sidebar__title h5" id="rex-sidebar-title"></span>
      <button class="sidebar__close" data-js-close>
  <span class="visually-hidden">Close</span>
  <span aria-hidden="true" aria-role="img">
    <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M17 1L1 17" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
      <path d="M1 1L17 17" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
    </svg>
  </span>
</button>
    </div>
    <div class="sidebar__body">
      <div class="sidebar-large-padding">
        <ul class="store-availabilities-list" id="rex-sidebar-list"></ul>
      </div>
    </div>
  </sidebar-drawer>
</div>
