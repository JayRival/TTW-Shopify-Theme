{% doc %}
  @prompt
    Create a promotion cards section that mirrors the standard Shopify promotion cards functionality. It should be a section that contains multiple card blocks. Each card block should have settings for image, heading, description, button text, and button link. The section should have settings for columns per row, spacing, colors, and alignment. Add a new setting called "Mobile layout" with options for "Stack vertically" or "Scroll horizontally". When horizontal scroll is selected, cards should scroll sideways on mobile and tablet screen sizes instead of stacking. Use CSS overflow-x scroll with smooth scrolling behavior for the horizontal layout.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-promo-cards-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-promo-cards__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-promo-cards__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-promo-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-promo-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .ai-promo-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-promo-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4 / 3;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-promo-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-promo-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-promo-card__heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
  }

  .ai-promo-card__description-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    flex-grow: 1;
  }

  .ai-promo-card__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    {% if block.settings.text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif block.settings.text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  .ai-promo-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 989px) {
    .ai-promo-cards__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    {% if block.settings.mobile_layout == 'stack' %}
      .ai-promo-cards__grid-{{ ai_gen_id }} {
        grid-template-columns: 1fr;
      }
    {% else %}
      .ai-promo-cards__grid-{{ ai_gen_id }} {
        display: flex;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        scroll-behavior: smooth;
        gap: {{ block.settings.card_spacing }}px;
        padding-bottom: 10px;
      }

      .ai-promo-cards__grid-{{ ai_gen_id }}::-webkit-scrollbar {
        height: 8px;
      }

      .ai-promo-cards__grid-{{ ai_gen_id }}::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 4px;
      }

      .ai-promo-cards__grid-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 4px;
      }

      .ai-promo-cards__grid-{{ ai_gen_id }}::-webkit-scrollbar-thumb:hover {
        background: #555;
      }

      .ai-promo-card-{{ ai_gen_id }} {
        min-width: 280px;
        flex-shrink: 0;
        scroll-snap-align: start;
      }
    {% endif %}
  }
{% endstyle %}

